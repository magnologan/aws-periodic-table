<html lang="en" xml:lang="en" xmlns= "https://www.w3.org/1999/xhtml">
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta charset="utf-8">


  <title>Periodic Table of Amazon Web Services</title>
  <meta name="description" content="Periodic Table of Amazon Web Services"/>
  
  <style type="text/css">
    body {
      font-family: 'Yanone Kaffeesatz';
    }
    
    a {
      text-decoration: none;
      color: inherit;
    }
    
    .Container {
    }
    
    .Wrapper {
      width: 85%;
      margin:auto;
    }    
     
    .Grid {
      display: inline-grid;
      grid-template-columns: repeat(19, 4vw);
      grid-template-rows: repeat(18, 4vw);
      grid-column-gap: .5vw;
      grid-row-gap: .5vw;    
    }
    
    .Title {
      grid-column-start: 2;
      grid-column-end: span 16;
      grid-row-start:1;
      grid-row-end: span 2;
      color: #c92d39;
      font-size: 5.5vw;
      font-weight: bold;
      text-align: center;
      margin: auto;
    }
    
    .Legend {
      grid-column-start: 4;
      grid-column-end: span 9;
      grid-row-start: 3;
      grid-row-end: span 2;
    }
    
    ul.LegendLabels {
      margin: 0;
      padding: 0;
      float: left;
      font-size: 1vw;
      font-weight: bold;
      list-style: none;
      -moz-column-count: 3;
      -moz-column-gap: 1vw;
      -webkit-column-count: 3;
      -webkit-column-gap: 1vw;
      column-count: 3;
      column-gap: 1vw;  
    }
    
    ul.LegendLabels li span {
      display: block;
      float: left;
      height: .8vw;
      width: .8vw;
      margin-right: .5vw;
      margin-left: 0;
    }
    
    .Service {
      width: 4vw;
      height: 4vw;
      background-color: #000;
      color: #fff;
      border-radius: .3vw;
      border: .15vw solid;
      text-align: center;
    }
    
    .Prefix {
      margin: 2px;
      font-size: .6vw;
      width: 100%;
      height: 10%;
      text-align: center;
      color: #e5e5e5;  
    }
    
    .Symbol {
      margin: 4px;
      font-size: 2.5vw;
      height: 50%;
      font-weight: bold;
    }
    
    .Name {
      margin: 4px;
      font-size: .9vw;
      height: 40%;
      text-align: center;
      color: #e5e5e5;
    }
    
    .SmallName {
      font-size: .6vw;
    }

    .ReallySmallName {
      font-size: .5vw;
    }
    
    {{#categories}}
    .{{class}} { color: {{color}}; border-color: {{color}}; }
    {{/categories}}
  </style>
  <link href="https://fonts.googleapis.com/css?family=Yanone+Kaffeesatz" rel="stylesheet">
</head>
<body>
  <div class="Container">
    <div class="Wrapper">
      <div class="Grid">
        <div class="Title">
          <span>Periodic Table of Amazon Web Services</span>
        </div>
        <div class="Legend">
          <ul class="LegendLabels">
            {{#categories}}
            <li><span style='background: {{color}};'></span>{{name}}</li>
            {{/categories}}
          </ul>
        </div>
        {{#categories}}
        {{#services}}
        <div class="Service {{category}}" style="grid-column: {{column}}; grid-row: {{row}};" >
          <a href="{{{link}}}" target="_blank">
            <div class="Prefix">{{prefix}}</div>
            <div class="Symbol {{category}}">{{symbol}}</div>
            <div class="Name {{#long}}SmallName{{/long}} {{#reallong}}ReallySmallName{{/reallong}}">{{name}}</div>
          </a>
        </div>
        {{/services}}
        {{/categories}}
      </div>
    </div>
<body>
